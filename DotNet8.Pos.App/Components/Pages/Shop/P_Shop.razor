@page "/shop"

<MudText Typo="Typo.h6">
    <MudIconButton Icon="@Icons.Material.Filled.Add" aria-label="Create" OnClick="@(()=>Popup())"></MudIconButton>
    Shop
</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudTextField @bind-Value="searchText"
                      Label="Search"
                      Placeholder="Search by code or name..."
                      Variant="MudBlazor.Variant.Outlined"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Immediate="true"
                      OnKeyUp="HandleSearchKeyUp" />
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudButton Variant="MudBlazor.Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.Search"
                   OnClick="Search"
                   Class="mt-1">
            Search
        </MudButton>
        <MudButton Variant="MudBlazor.Variant.Outlined"
                   Color="Color.Secondary"
                   StartIcon="@Icons.Material.Filled.Clear"
                   OnClick="ClearSearch"
                   Class="mt-1 ml-2">
            Clear
        </MudButton>
    </MudItem>
</MudGrid>

@if (responseModel is not null)
{
int count = 0;
    <MudSimpleTable Style="overflow-x: auto;">
        <thead>
            <tr>
                <th>No.</th>
                <th>Shop Code</th>
                <th>Shop Name</th>
                <th>Mobile Number</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in responseModel.Data.Shop)
        {
            <tr>
                    <td>@(++count + ((responseModel.PageSetting.PageNo - 1) * responseModel.PageSetting.PageSize))</td>
                    <td>@item.ShopCode</td>
                    <td>@item.ShopName</td>
                    <td>@item.MobileNo</td>
                    <td>@item.Address</td>
                    <td>
                        <MudButton Variant="MudBlazor.Variant.Filled" StartIcon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" OnClick="@(()=>EditPopUp(item))">Edit</MudButton>  
                        <MudButton Variant="MudBlazor.Variant.Filled" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" OnClick="@(()=>Delete(item.ShopId))">Delete</MudButton>
                    </td>
                </tr>
        }
        </tbody>
    </MudSimpleTable>

    <MudPagination SelectedChanged="PageChanged" Count="@responseModel.PageSetting.PageCount" Class="pa-4" />
}